; vim:ft=dosini
[colors]
background = #101010
foreground = #eeeeee
foreground-bright = #ffffff
foreground-dimmed = #a0a0a0
foreground-dark = #404040
alert = #55bd2c40

[bar/top]
width = 100%
height = 23

background = ${colors.background}
foreground = ${colors.foreground}

padding= 1
module-margin = 1

font-0 = monospace:pixelsize=11;3
font-1 = SymbolsNerdFont:size=10.5:weight=light;2

modules-left = bspwm
modules-right = player-mpris-tail pulseaudio xkeyboard wlan date time

wm-restack = bspwm

[module/xkeyboard]
type = internal/xkeyboard

format =  <label-layout>

blacklist-0 = num lock
blacklist-2 = scroll lock
blacklist-3 = caps lock

[module/bspwm]
type = internal/bspwm

enable-click = false
enable-scroll = false

format = <label-state>

label-separator = "  "

label-focused = %name%
label-focused-foreground = ${colors.foreground-bright}

label-urgent = %name%
label-urgent-foreground = ${colors.alert}

label-occupied = %name%
label-occupied-foreground = ${colors.foreground-dimmed}

label-empty = %name%
label-empty-foreground = ${colors.foreground-dark}

[module/wlan]
type = internal/network
interval = 3.0
interface = wlp5s0

label-connected =  %essid%

format-disconnected =

[module/time]
type = internal/date
interval = 5

format =  <label>
label = %time%
time = %H:%M

[module/date]
type = internal/date
interval = 120

format =  <label>
label = %date%
date = "%Y-%m-%d"

[module/pulseaudio]
type = internal/pulseaudio

label-volume =  %percentage%%
label-muted =  0%

# https://github.com/polybar/polybar-scripts/tree/master/polybar-scripts/player-mpris-tail
[module/player-mpris-tail]
type = custom/script
exec = ~/.config/polybar/player-mpris-tail.py -f ' {artist} - {title}'
tail = true
label = %output%

[settings]
screenchange-reload = true
