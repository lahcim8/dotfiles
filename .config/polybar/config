[colors]
background = #101010
foreground = #fafafa
foreground-bright = #ffffff
foreground-dimmed = #a0a0a0
foreground-dark = #404040
alert = #55bd2c40

[bar/top]
width = 100%
height = 23
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

padding-right = 1
module-margin = 1

font-0 = monospace:pixelsize=11;3
font-1 = SymbolsNerdFont:size=10.5:weight=light;2

modules-left = bspwm i3
modules-right = pulseaudio battery xkeyboard wlan date time

wm-restack = bspwm

[module/xkeyboard]
type = internal/xkeyboard

label-layout =  %layout%

blacklist-0 = num lock
blacklist-2 = scroll lock
blacklist-3 = caps lock

[module/bspwm]
type = internal/bspwm
enable-click = false
enable-scroll = false

label-focused = " %name% "

label-urgent = " %name% "
label-urgent-foreground = ${colors.alert}

label-occupied = " %name% "
label-occupied-foreground = ${colors.foreground-dimmed}

label-empty = " %name% "
label-empty-foreground = ${colors.foreground-dark}

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 3.0

format-connected = <label-connected>
label-connected =  %essid%

format-disconnected =

[module/time]
type = internal/date
interval = 5

time = %H:%M
label =  %time%

[module/date]
type = internal/date
interval = 120

date = "%Y-%m-%d"
label =  %date%

[module/pulseaudio]
type = internal/pulseaudio

label-volume =  %percentage%%
label-muted =  0%

[module/battery]
type = internal/battery

full-at = 99
battery = BAT0
adapter = AC

label-charging =  %percentage%%
label-discharging =  %percentage%%


