# vim: set ft=i3

# i3-gaps
for_window [class="^.*"] border pixel 2
gaps inner 0
gaps outer 0
smart_gaps on
smart_borders on

# mod key
set $mod Mod4

# definitions
set $termexec $TERMINAL -e

# start on startup
exec --no-startup-id redshift
exec --no-startup-id feh --bg-fill --no-fehbg /home/michal/.wallpaper
exec --no-startup-id polybar top
exec --no-startup-id dunst
exec --no-startup-id emacs --daemon
#exec --no-startup-id compton
#exec --no-startup-id xss-lock
exec --no-startup-id "$BROWSER"

# inspired by Luke Smith
bindsym $mod+Return 		exec --no-startup-id $TERMINAL
#bindsym $mod+Shift+Return	exec --no-startup-id samedir

bindsym $mod+space 		exec --no-startup-id playerctl play-pause
bindsym $mod+Shift+space	exec --no-startup-id playerctl next

#bindsym $mod+Escape		workspace prev
bindsym $mod+Shift+Escape       exec --no-startup-id systemctl poweroff

#bindsym $mod+BackSpace
#bindsym $mod+Shift+BackSpace	exec --no-startup-id prompt "Are you sure you want to reboot?" "$reboot"

bindsym $mod+q			kill
bindsym $mod+Shift+q		kill

bindsym $mod+w			exec --no-startup-id $BROWSER
bindsym $mod+Shift+w		exec --no-startup-id $BROWSER --private-window

bindsym $mod+e			exec --no-startup-id emacsclient -c
bindsym $mod+Shift+e		exec --no-startup-id $termexec neomutt

bindsym $mod+r 			exec --no-startup-id $termexec ranger
bindsym $mod+Shift+r		exec --no-startup-id $termexec sudo ranger /

bindsym $mod+t			split toggle
bindsym $mod+Shift+t		layout toggle split

bindsym $mod+y			exec --no-startup-id  $termexec calcurse
#bindsym $mod+Shift+y		exec --no-startup-id "bash ~/.scripts/i3resize left"

#bindsym $mod+u			[instance="dropdown"] scratchpad show; [instance="dropdown"] move position center
#bindsym $mod+Shift+u		exec --no-startup-id "bash ~/.scripts/i3resize down"

bindsym $mod+i 			exec --no-startup-id $termexec htop
bindsym $mod+Shift+i		exec --no-startup-id $termexec ipython

#bindsym $mod+o			sticky toggle
#bindsym $mod+Shift+o		exec --no-startup-id "bash ~/.scripts/i3resize right"

bindsym $mod+p			exec --no-startup-id mpc toggle
#bindsym $mod+Shift+p		exec --no-startup-id lmc pause

#bindsym $mod+a			[instance="math"] scratchpad show; [instance="math"] move position center
#bindsym $mod+Shift+a		exec --no-startup-id $termexec pulsemixer

#bindsym $mod+s			gaps inner current plus 5
#bindsym $mod+Shift+s		gaps inner current minus 5

bindsym $mod+d			exec --no-startup-id dmenu_run -l 10 -fn "monospace-12" -nb '#101010' -nf '#ffffff' -p "run:" -sb '#303030' -sf '#ffffff'
#bindsym $mod+Shift+d		gaps inner current set 0; gaps outer current set 0

bindsym $mod+f			fullscreen toggle
#bindsym $mod+Shift+f		mode "$freeze"

bindsym $mod+g			gaps inner current set 15
bindsym $mod+Shift+g		gaps inner current set 0

bindsym $mod+h			focus left
bindsym $mod+Shift+h		move left
bindsym $mod+Ctrl+h		resize grow left 1 px or 1 ppt

bindsym $mod+j			focus down
bindsym $mod+Shift+j		move down
bindsym $mod+Ctrl+j		resize grow down 1 px or 1 ppt

bindsym $mod+k			focus up
bindsym $mod+Shift+k		move up
bindsym $mod+Ctrl+k		resize grow up 1 px or 1 ppt

bindsym $mod+l			focus right
bindsym $mod+Shift+l		move right
bindsym $mod+Ctrl+l		resize grow right 1 px or 1 ppt

#bindsym $mod+z			gaps outer current plus 5
#bindsym $mod+Shift+z		gaps outer current minus 5

bindsym $mod+x			exec --no-startup-id systemctl suspend
bindsym $mod+Shift+x		exec --no-startup-id systemctl hibernate

#bindsym $mod+c			exec --no-startup-id camtoggle
##bindsym $mod+Shift+c

bindsym $mod+v			exec --no-startup-id $termexec ncmpcpp -s visualizer
#bindsym $mod+Shift+v		exec --no-startup-id projectM-pulseaudio

#bindsym $mod+b			bar mode toggle
#bindsym $mod+Shift+b		floating toggle; sticky toggle; exec --no-startup-id bottomleft

bindsym $mod+n			exec --no-startup-id $termexec nnn
bindsym $mod+Shift+n		exec --no-startup-id $termexec sudo nnn /

bindsym $mod+m 			exec --no-startup-id $termexec ncmpcpp
bindsym $mod+Shift+m		exec --no-startup-id pavucontrol

bindsym Print 			exec --no-startup-id scrot -e 'mv "$f" ~/media/screenshots && notify-send "Screenshot saved" "$f"'
bindsym Shift+Print		exec --no-startup-id scrot -s -e 'mv "$f" ~/media/screenshots && notify-send "Screenshot saved" "$f"'

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9
bindsym $mod+0		workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1	move container to workspace $ws1
bindsym $mod+Shift+2	move container to workspace $ws2
bindsym $mod+Shift+3	move container to workspace $ws3
bindsym $mod+Shift+4	move container to workspace $ws4
bindsym $mod+Shift+5	move container to workspace $ws5
bindsym $mod+Shift+6	move container to workspace $ws6
bindsym $mod+Shift+7	move container to workspace $ws7
bindsym $mod+Shift+8	move container to workspace $ws8
bindsym $mod+Shift+9	move container to workspace $ws9
bindsym $mod+Shift+0	move container to workspace $ws10

