# vim: ft=i3

# i3-gaps
for_window [class="^.*"] border pixel 2
gaps inner 0
gaps outer 0
smart_gaps on
smart_borders on

# mod key
set $mod Mod1

# definitions
set $termexec $TERMINAL -e

# start on startup
exec --no-startup-id redshift
exec --no-startup-id feh --bg-scale --no-fehbg /home/michal/.config/wallpapers/cDvIVbE.jpg
exec --no-startup-id $HOME/.config/polybar/launch.sh
#exec --no-startup-id compton
exec firefox

