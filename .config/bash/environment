# PATH
export PATH="$HOME/.scripts:$PATH:/usr/local/texlive/2018/bin/x86_64-linux"

#export MANPATH=${MANPATH:+$MANPATH:}/usr/local/texlive/2018/texmf-dist/doc/man
#export INFOPATH=${INFOPATH:+$INFOPATH:}/usr/local/texlive/2018/texmf-dist/doc/info

# Default programs
export EDITOR="vim"
export TERMINAL="st"
export TERMEXEC="$TERMINAL -e"
export BROWSER="firefox"
export READER="zathura"

# ASAN
export ASAN_OPTIONS=symbolize=1:debug=1:detect_leaks=1:strict_string_checks=1:detect_stack_use_after_return=1:check_initialization_order=1:strict_init_order=1

# NNN
export NNN_USE_EDITOR=1

# less
export LESSHISTFILE=/dev/null

# Mathematica
export MATHEMATICA_USERBASE="${XDG_CONFIG_HOME:-"$HOME/.config"}/mathematica"

# readline
export INPUTRC="${XDG_CONFIG_HOME:-"$HOME/.config"}/readline/inputrc"

# parallel
export PARALLEL_HOME="${XDG_CONFIG_HOME:-"$HOME/.config"}/parallel"

# wget
export WGETRC="${XDG_CONFIG_HOME:-"$HOME/.config"}/wget/wgetrc"

# jupyter, ipython
export JUPYTER_CONFIG_DIR="${XDG_CONFIG_HOME:-"$HOME/.config"}/jupyter"
export IPYTHONDIR="${XDG_CONFIG_HOME:-"$HOME/.config"}/ipython"
