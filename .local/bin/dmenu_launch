#!/bin/bash

programs='
alacritty:exec alacritty #
aerc:$TERMEXEC env TERM=xterm-256color aerc
calc:exec localc
chromium:exec chromium #
cmus:exec cmus #
code:exec code #
compton:exec compton #
dunst:exec dunst #
emacs:exec emacs #
firefox:exec firefox #
gramps:exec gramps
gucharmap:exec gucharmap #
gvim: exec gvim
htop:$TERMEXEC htop
idle:exec idle #
impress:exec loimpress
ipython:$TERMEXEC ipython
jupyter-lab:exec jupyter-lab
mathematica:exec mathematica #
pavucontrol:exec pavucontrol
reboot:exec reboot #
redshift:exec redshift
spotify:exec spotify
spotifyd:exec spotifyd
sqldeveloper:exec env _JAVA_AWT_WM_NONREPARENTING=1 JAVA_HOME=/usr/lib/jvm/default _JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true" oracle-sqldeveloper
st:exec st
syncthing:exec syncthing
vivado:source /opt/Xilinx/Vivado/2018.2/.settings64-Vivado.sh && exec env _JAVA_AWT_WM_NONREPARENTING=1 _JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true" vivado
vlc:exec vlc #
writer:exec lowriter
'

eval "$(grep "^$(grep -v '#$\|^$\|^#' <<< "$programs" | cut -d ':' -f 1 | dmenu -p "run:"):" <<< "$programs" | cut -d ':' -f 2)"
