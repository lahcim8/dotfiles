#!/bin/bash

set -e

declare -A programs=(
	[alacritty]=s
	[calc]=localc
	[chromium]=s
	[emacs]="emacsclient -c"
	[firefoxtemp]="firefoxtemp about:blank"
	[gramps]=s
	[gucharmap]=s
	[impress]=loimpress
	[jupyter-lab]=s
	[pavucontrol]=s
	[reboot]=s
	[screenshot]="screenshot -s"
	[spotify]=s
	[st]=s
	[syncthing]=s
	[writer]=s
)

program=$(printf '%s\n' "${!programs[@]}" | sort | dmenu -p "run:")
execute=${programs["$program"]}

if [[ $execute = s ]]; then
	# standalone program
	exec "$program"
fi

exec $execute
