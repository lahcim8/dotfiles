#!/usr/bin/env bash

set -o pipefail

# state dirs
general=(.mozilla/firefox/profile .vim/{undo,swap} .config/transmission-daemon .local/share/zathura .config/mpv/watch_later)
# state files
general+=(.viminfo .config/fish/fish_variables .local/share/fish/fish_history "$(readlink .wallpaper)")
# secret dirs
general+=(.password-store)
# secret files
general+=(.ssh/hosts)
# machine specific dirs
machine=(.config/syncthing .stfolder)
# machine specific files
machine+=(.config/pulse/default.pa)

rsync_flags=(-aR --delete -i)

: ${host:="$(hostname)"}
: ${remote:="${host}_phone"}

cd
destination="."

push_files() {
	declare set="$1"
	declare -n files="$2"
	rsync "${rsync_flags[@]}" "${files[@]}" "$remote:$set/./"
}

pull_files() {
	declare set="$1"
	declare -n files="$2"
	rsync "${rsync_flags[@]}" "${files[@]/#/"$remote:$set/./"}" "$destination"
}

cd

case "$1" in
push)
	push_files general general
	push_files "$host" machine
;;
pull)
	pull_files general general
	pull_files "$host" machine
;;
esac
